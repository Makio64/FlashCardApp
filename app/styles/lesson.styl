@import 'nib'

#lesson
	margin auto
	width 700px
	h1
		margin 20px
		font-size 18px
		text-align center
	label
		display block
		padding 10px 0

	input, select
		font-size 14px
		&.description
			width 100%
			height 60px
			vertical-align top
	.inline
		display inline-block
	.add
		background #CCC
		border 1px solid #999
		border-radius 5px
		padding 10px
		margin 10px 0
	.content
		overflow-x scroll
		overflow-y auto
		position relative
		vertical-align top
		width 100%
	.rows
		width 665px
		margin auto
		overflow auto
		border 1px solid #999
		border-radius 5px
	ul.title
		li
			padding 10px
			border-bottom 1px solid #999
			width 200px
			display inline-block
			border-right 1px dotted #CCC
			text-align center
	ul.words
		width 100%
	ul.word
		width 100%
		li
			padding 10px
			border-bottom 1px solid #999
			width 200px
			display inline-block
			border-right 1px dotted #CCC
			text-align center

	.create
		display block
		margin 20px 0
		padding 15px
		background
		text-align center
		text-decoration none
		color #000
		border 1px solid #FFF
		border-radius: 5px;
		box-shadow 0px 3px 7px 0px rgba(179, 152, 50, 0.75);
		background: rgb(30, 255, 152);
		background: linear-gradient(180deg, rgb(30, 255, 152) 30%, rgb(0, 255, 83) 70%);
		-transition box-shadow 0.5s

