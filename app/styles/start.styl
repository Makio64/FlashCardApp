@import 'nib'

#start
	
	padding 20px

	width 300px
	margin auto

	select
		border: 1px solid #ccc
		border-radius 5px
		width 100%
		padding 10px 15px
		appearance none
		font-size 16px
		margin 15px 0

	.start
		display block
		margin 20px 0
		padding 15px
		background
		text-align center
		text-decoration none
		color #000
		border 1px solid #FFF
		border-radius: 5px;
		box-shadow 0px 3px 7px 0px rgba(179, 152, 50, 0.75);
		background: rgb(30, 255, 152);
		background: linear-gradient(180deg, rgb(30, 255, 152) 30%, rgb(0, 255, 83) 70%);
		-transition box-shadow 0.5s

	.option 
		color #333
		padding 20px 0 5px 0
		display block

	.options
		color #666
		padding 20px 0
		label
			display inline-block
			width 150px